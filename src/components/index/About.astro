---
import type { ResumeBasics } from "../../types";
import TextScrolling from "../TextScrolling.astro";
import TextTyping from "../TextTyping.astro";

export interface Props {
  title: string;
  description: string;
  available: boolean;
  availabilityTitle: string;
  availabilityDescription: string;
  badgeImage: string;
  badgeLink: string;
  basics: ResumeBasics;
}

const {
  title,
  description,
  available,
  availabilityTitle,
  availabilityDescription,
  badgeImage,
  badgeLink,
  basics,
} = Astro.props;
// const firstName = basics.name.split(" ")[0];
---

<div id="about" class="pb-12 mt-5">
  <div class="flex">
    <div class="grow">
      <div class="py-1 text-xl">
        <TextScrolling delay="0.5s" />
      </div>
      <h1
        class="text-5xl font-bold text-transparent gradient-text-short animated-gradient-short"
      >
        {title}
      </h1>
      <TextTyping
        class="py-3 text-3xl font-bold hidden sm:block"
        text={description}
        delay="0.5s"
      />
    </div>
    {
      badgeImage && (
        <div>
          <a target="_blank" href={badgeLink}>
            <img src={badgeImage} width="150" />
          </a>
        </div>
      )
    }
  </div>
  <div class="py-2">
    <text class="text-xl font-medium leading-relaxed text-gray-900">
      {basics.summary}
    </text>
  </div>

  {
    available && (
      <div
        class="bg-green-100 border-t-4 border-green-500 rounded-b text-green-900 px-4 py-3 shadow mt-8"
        role="alert"
      >
        <div class="flex items-center">
          <div class="py-1">
            <svg
              class="fill-current h-6 w-6 text-green-500 mr-4 justify-center items-center align-middle"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6.633 10.5c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 012.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 00.322-1.672V3a.75.75 0 01.75-.75A2.25 2.25 0 0116.5 4.5c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 01-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 00-1.423-.23H5.904M14.25 9h2.25M5.904 18.75c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 01-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 10.203 4.167 9.75 5 9.75h1.053c.472 0 .745.556.5.96a8.958 8.958 0 00-1.302 4.665c0 1.194.232 2.333.654 3.375z"
              />
            </svg>
          </div>
          <div>
            <p class="font-bold">{availabilityTitle} </p>
            <p class="text-sm">{availabilityDescription}</p>
          </div>
        </div>
      </div>
    )
  }
</div>
